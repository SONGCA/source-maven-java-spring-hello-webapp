pipeline {
    agent any // 전체 단계를 하나의 에이전트에서 실행하여 파일을 공유합니다.

    stages {
        stage('Checkout') {
            agent { label ('local')}
            steps {
                git branch: 'main', url: 'https://github.com/SONGCA/source-maven-java-spring-hello-webapp.git'
            }
        }

        stage('Build') {
            steps {
                // 특정 단계에서만 컨테이너를 사용하려면 스크립트 블록 내에서 실행하거나,
                // 호스트에 메이븐이 있다면 sh 'mvn ...'을 사용하세요.
                // 여기서는 기존 방식을 유지하되 파일을 보존하도록 처리합니다.
                script {
                    docker.image('maven:3-openjdk-17').inside {
                        sh 'mvn clean package'
                    }
                }
            }
        }

        stage('Image Build') {
            agent { label('local')}
            steps {
                // 이제 같은 agent 상에 있으므로 target/ 폴더가 보입니다.
                sh 'ls -l target/'
                sh 'docker image build -t tomcat:hello .'
            }
        }

        stage('Image Tag') {
            agent { label('local')}
            steps {
                sh "docker image tag tomcat:hello songcj1/tomcat:${env.BUILD_NUMBER}"
                sh "docker image tag tomcat:hello songcj1/tomcat:latest"
            }
        }

        stage('Image Push') {
            agent { label('local')}
            steps {
                withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
                    sh "docker image push songcj1/tomcat:${env.BUILD_NUMBER}"
                    sh "docker image push songcj1/tomcat:latest"
                }
            }
        }

        stage('Running Container') 
            agent { label('local')}
            steps {
                // dind 컨테이너 에이전트를 별도로 쓰지 않고 
                // 호스트의 ansible 기능을 바로 사용합니다.
                ansiblePlaybook(playbook: 'playbook.yaml')
            }
        }
    }
}
